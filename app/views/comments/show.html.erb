<div id="comment">
  <%= @comment.body %>
<div id="tip">
  <p>Tip:<%= @comment.tip %></p>
</div>
<span id="author">Created by <%= @comment.user.name %></span>
</div>
<%= link_to "Edit Comment", [:edit, @listing, @comment] %>
<%= link_to "Delete Comment", [@listing, @comment], method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>